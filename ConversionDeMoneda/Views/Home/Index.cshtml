@model ConversionDeMoneda.Models.Entities.ConversionViewModel;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    
    <title>s</title>
    <style>
        div{
            display:flex;
            align-items:start;
            vertical-align:central;
        }
