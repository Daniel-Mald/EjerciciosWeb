        </div>

      
           <h3> @Model.cantidadDestino @Model.tipoMonedaDestino</h3>
       
       
        @Html.RadioButtonFor(vm => vm.transaccion,"PesosADolares")<label>Pesos a dolares</label>
        @Html.RadioButtonFor(vm => vm.transaccion,"DolaresAPesos")<label>Dolares a pesos</label>

        <br/>

        <input type="submit" value="Convertir" />
            
        

        
    </form>
    
       
   
     
    
</body>
