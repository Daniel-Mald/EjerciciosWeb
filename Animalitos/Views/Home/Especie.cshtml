@model Animalitos.Models.Entities.Especies;
<html>
<head>
    <title>ZooPlanet</title>
    <link href="~/stylesheet.css" rel="stylesheet" />
    <link href="~/font-awesome.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <h1><a href="~/home/index"><b>Zoo</b>Planet</a></h1>
        <nav>
            <ul>
                <li><a href="~/home/index">Home</a></li>
            </ul>
        </nav>
    </header>
    <main>

        <div class="especieficha1">
            <img src="~/especies/@(Model.Id).jpg" />
            <div>
                <h1>@Model.Especie</h1>
                <p><label>Clase:</label><a href="~/home/especies">@Model.Especie</a></p>
                <p><label>Peso:</label>@Model.Peso kg</p>
                <p><label>Tamaño:</label>@Model.Tamaño cm</p>
                <p><label>Habitat:</label>@Model.Habitat</p>
                <p><label>Descripción:</label></p>
                <p>@Model.Observaciones</p>
            </div>

            <a href="~/home/especies">Regresar</a>
        </div>
    </main>
    <footer>Programación Web</footer>
</body>
</html>
