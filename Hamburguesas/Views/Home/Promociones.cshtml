@model Hamburguesas.Models.ViewModels.PromocionesViewModel;
@{
    Layout = "_Layout";
}
<section class="menu1">
    <img src="~/hamburguesas/@(Model.Id).png" />
    <div class="datos">
        <h3>
            <del>@Model.PrecioNormal.ToString("c")</del>
            <b>@Model.PrecioDescuento.ToString("c")</b>
        </h3>
        <h2>@Model.Nombre</h2>
        <p>@Model.Descripcion</p>
    </div>
    <span>
        <a href="~/Home/Promociones/@(Model.NombreAnterior.Replace(" ","-" ))">&lt;</a>
        <a href="~/Home/Promociones/@(Model.NombreSiguiente.Replace(" ", "-"))">&gt;</a>
    </span>
</section>